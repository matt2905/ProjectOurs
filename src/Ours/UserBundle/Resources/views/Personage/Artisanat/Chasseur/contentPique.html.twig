<table id="chPique" class="table table-bordered artisanat">
    <thead>
    <tr>
        <th colspan="2" class="beni">PIQUE</th>
    </tr>
    <tr>
        <th>Pseudo</th>
        <th class="tier">Tiers</th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <td colspan="2" class="null"></td>
    </tr>
    {% for personage in personages %}
        {% if personage.chPique %}
            <tr>
                <td class="beni">{{ personage.name }}</td>
                {% if personage.chPique == 4.2 %}
                    <td class="quatrePdeux tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 5.2 %}
                    <td class="cinqPdeux tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 6.2 %}
                    <td class="sixPdeux tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 7.2 %}
                    <td class="septPdeux tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 8.2 %}
                    <td class="huitPdeux tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 5.5 %}
                    <td class="cinqPcinq tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 6.5 %}
                    <td class="sixPcinq tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 7.5 %}
                    <td class="septPcinq tier">{{ personage.chPique }}</td>
                {% elseif personage.chPique == 8.5 %}
                    <td class="huitPcinq tier">{{ personage.chPique }}</td>
                {% else %}
                    <td class="deux tier">{{ personage.chPique }}</td>
                {% endif %}
            </tr>
        {% endif %}
    {% endfor %}
    </tbody>
</table>