<table id="maCasque1" class="table table-bordered armor">
    <thead>
    <tr>
        <th colspan="5" class="armor1">LEGERS EN TISSU</th>
    </tr>
    <tr>
        <th>Pseudo</th>
        <th class="tier">Tiers</th>
        <th class="null tier"></th>
        <th>Pseudo</th>
        <th class="tier">Tiers</th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <td colspan="5" class="null"></td>
    </tr>
    {% set count = 0 %}
    {% for personage in personages %}
        {% if personage.maCasque1 %}
            {% set count = count + 1 %}
            {% if count % 2 %}
                <tr>
            {% else %}
                <td class="null"></td>
            {% endif %}
            <td class="armor1">{{ personage.name }}</td>
            {% if personage.maCasque1 == 3 %}
                <td class="trois tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 4 %}
                <td class="quatre tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 5 %}
                <td class="cinq tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 6 %}
                <td class="six tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 7 %}
                <td class="sept tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 8 %}
                <td class="huit tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 5.4 %}
                <td class="cinqPquatre tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 6.4 %}
                <td class="sixPquatre tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 7.4 %}
                <td class="septPquatre tier">{{ personage.maCasque1 }}</td>
            {% elseif personage.maCasque1 == 8.4 %}
                <td class="huitPquatre tier">{{ personage.maCasque1 }}</td>
            {% else %}
                <td class="deux tier">{{ personage.maCasque1 }}</td>
            {% endif %}
            {% if count % 2 == 0 %}
                </tr>
            {% endif %}
        {% endif %}
    {% endfor %}
    {% if count % 2 %}
        </tr>
    {% endif %}
    </tbody>
</table>