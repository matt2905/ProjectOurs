<table id="chLance" class="table table-bordered artisanat">
    <thead>
    <tr>
        <th colspan="2" class="beni">LANCE</th>
    </tr>
    <tr>
        <th>Pseudo</th>
        <th class="tier">Tiers</th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <td colspan="2" class="null"></td>
    </tr>
    {% for personage in personages %}
        {% if personage.chLance %}
            <tr>
                <td class="beni">{{ personage.name }}</td>
                {% if personage.chLance == 3 %}
                    <td class="trois tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 4 %}
                    <td class="quatre tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 5 %}
                    <td class="cinq tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 6 %}
                    <td class="six tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 7 %}
                    <td class="sept tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 8 %}
                    <td class="huit tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 5.4 %}
                    <td class="cinqPquatre tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 6.4 %}
                    <td class="sixPquatre tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 7.4 %}
                    <td class="septPquatre tier">{{ personage.chLance }}</td>
                {% elseif personage.chLance == 8.4 %}
                    <td class="huitPquatre tier">{{ personage.chLance }}</td>
                {% else %}
                    <td class="deux tier">{{ personage.chLance }}</td>
                {% endif %}
            </tr>
        {% endif %}
    {% endfor %}
    </tbody>
</table>