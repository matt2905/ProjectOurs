<table id="chCasque3" class="table table-bordered armor">
    <thead>
    <tr>
        <th colspan="5" class="armor3">LEGERS EN CUIR</th>
    </tr>
    <tr>
        <th>Pseudo</th>
        <th class="tier">Tiers</th>
        <th class="null tier"></th>
        <th>Pseudo</th>
        <th class="tier">Tiers</th>
    </tr>
    </thead>

    <tbody>
    <tr>
        <td colspan="5" class="null"></td>
    </tr>
    {% set count = 0 %}
    {% for personage in personages %}
        {% if personage.chCasque3 %}
            {% set count = count + 1 %}
            {% if count % 2 %}
                <tr>
            {% else %}
                <td class="null"></td>
            {% endif %}
            <td class="armor3">{{ personage.name }}</td>
            {% if personage.chCasque3 == 4.3 %}
                <td class="quatrePtrois tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 5.3 %}
                <td class="cinqPtrois tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 6.3 %}
                <td class="sixPtrois tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 7.3 %}
                <td class="septPtrois tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 8.3 %}
                <td class="huitPtrois tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 6.6 %}
                <td class="sixPsix tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 7.6 %}
                <td class="septPsix tier">{{ personage.chCasque3 }}</td>
            {% elseif personage.chCasque3 == 8.6 %}
                <td class="huitPsix tier">{{ personage.chCasque3 }}</td>
            {% else %}
                <td class="deux tier">{{ personage.chCasque3 }}</td>
            {% endif %}
            {% if count % 2 == 0 %}
                </tr>
            {% endif %}
        {% endif %}
    {% endfor %}
    {% if count % 2 %}
        </tr>
    {% endif %}
    </tbody>
</table>